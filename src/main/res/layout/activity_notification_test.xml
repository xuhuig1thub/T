<?xml version="1.0" encoding="utf-8"?>
<com.a.notification.MLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:btn="http://schemas.android.com/apk/res-auto"
    android:id="@+id/xi"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a.notification.NotificationTestActivity">
    <com.a.notification.CustomButton
        android:id="@+id/send_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send notice"
        android:onClick="onClick"
        btn:buttonNum="1"
        btn:itemBackground="@color/colorAccent"
        btn:btnFocusable="true"
        btn:btn_layout_width="@dimen/activity_horizontal_margin"
        btn:btn_degree="2.3"
        />
    <com.a.notification.CustomButton
        android:id="@+id/show_normal_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show_normal_notification"
        android:theme="@style/RtlUnderlay.Widget.AppCompat.ActionButton.Overflow"
        android:onClick="onClick"/>
    <com.a.notification.CustomButton
        android:id="@+id/show_big_picture_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show_big_picture_notification"
        android:onClick="onClick"/>
    <com.a.notification.CustomButton
        android:id="@+id/show_inbox_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show_inbox_notification"
        android:onClick="onClick"/>
    <com.a.notification.CustomButton
        android:id="@+id/show_media_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show_media_notification"
        android:onClick="onClick"/>
    <com.a.notification.CustomButton
        android:id="@+id/show_message_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show_message_notification"
        android:onClick="onClick"/>
    <com.a.notification.CustomButton
        android:id="@+id/show_big_text_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show_big_text_notification"
        android:onClick="onClick"/>
    <com.a.notification.CustomButton
        android:id="@+id/show_reply_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show_reply_notification"
        android:onClick="onClick"/>
    <com.a.notification.CustomButton
        android:id="@+id/show_head_up_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show_head_up_notification"
        android:onClick="onClick"/>
    <com.a.notification.CustomView
        android:id="@+id/custom_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>
</com.a.notification.MLinearLayout>
